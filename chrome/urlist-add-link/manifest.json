{
  "manifest_version": 2,

  "name": "Urli.st extension",
  "description": "This extension allows you to add a page to Urli.st",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
      "persistent": true,
      "page": "background.html"
  },

  "permissions": [
    "https://secure.flickr.com/",
    "tabs",
    "http://urli.st/"
  ]
}
